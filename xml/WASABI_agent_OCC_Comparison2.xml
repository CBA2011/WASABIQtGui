				<wasabi:parameter name="base_intensity" value="0.25"/>
				<wasabi:parameter name="act_threshold" value="0.64"/>
				<wasabi:parameter name="sat_threshold" value="0.2"/>
				<wasabi:parameter name="decay" value="linear"/>
			</wasabi:primary>
		</info>
	</emotion>
